{{#partial "content"}}

    <div class="sighting-form container">
        <div class="card">
            <h1>Record Sighting</h1>
            <form action="/sightings" method="post">
                <input type="hidden" name="name" id="name" value="{{ranger.firstName}} {{ranger.lastName}}">
                <div class="form-group row">
                    <label for="animal" class="col-sm-2 col-form-label">Animal</label>
                    <div class="col-sm-10">
                        <select id="animal" name="animal" class="form-control">
                            {{#each animals}}
                            <option value="$animal.getId()">{{animal.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="location" class="col-sm-2 col-form-label">Location</label>
                    <div class="col-sm-10">
                        <select id="location" name="location" class="form-control">
                            {{#each locations}}
                            <option value="$location.getName()">{{location.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Record</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{{/partial}}

{{>layout.hbs}}