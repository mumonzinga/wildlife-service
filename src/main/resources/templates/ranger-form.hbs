{{#partial "content"}}

    <div class="sighting-form container">
        <div class="card">
            <h1>Add Ranger</h1>
            <form action="/ranger" method="post">
                <div class="form-group row">
                    <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="lastName"  name="lastName" placeholder="Last Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="badgeNumber" class="col-sm-2 col-form-label">Badge Number</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="badgeNumber" name="badgeNumber" placeholder="Badge Number">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Add Ranger</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{{/partial}}
{{>layout.hbs}}