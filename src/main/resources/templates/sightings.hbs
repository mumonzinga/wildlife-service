{{#partial "content"}}
    <div class="container animals-container">

        <div class="animals-left">
            <div class="animals-table">
                <div class="card">
                    <table class="table">
                        <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Ranger</th>
                            <th scope="col">Location</th>
                            <th scope="col">Animal Id</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each sightings}}
                        <tr>
                            <th scope="row">{{sighting.id}}</th>
                            <td>{{sighting.ranger}}</td>
                            <td>{{sighting.location}}</td>
                            <td>{{sighting.animalId}}</td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>


{{/partial}}
{{>layout.hbs}}